{
    "name": "Sinle Tab",
    "description": "Base Level Extension",
    "version": "1.0.0",
    "manifest_version": 2,
    "permissions": [
        "tabs"
    ],
    "browser_action": {
        "default_popup": "index.html",
        "default_icon": "stack-icon.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens index.html"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}