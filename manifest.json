{
    "name": "Sinle Tab",
    "description": "Base Level Extension",
    "version": "1.0.0",
    "manifest_version": 2,
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["main.css"],
            "js": ["single-tab.js"]
        }
    ],
    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "stack-icon.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+E",
                "mac": "Command+E"
            },
            "description": "Opens popup.html"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}