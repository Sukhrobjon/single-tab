{
    "name": "Single Tab",
    "description": "Base Level Extension",
    "version": "1.0",
    "manifest_version": 2,

    "permissions": [
        "tabs",
        "storage"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_icon": "assets/icon_48.png"
    },
    "icons": {
        "128": "assets/icon_128.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+E",
                "mac": "Command+E"
            },
            "description": "Opens popup.html"
        }
    },
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}